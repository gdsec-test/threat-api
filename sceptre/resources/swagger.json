{
  "swagger": "2.0",
  "info": {
    "description": "Threat Tools Platform API. See [documentation](https://github.com/gdcorp-infosec/threat-api/blob/main/docs/USAGE.md) available in our [GitHub repository](https://github.com/gdcorp-infosec/threat-api) for more information.",
    "version": "2.0.0",
    "title": "ThreatAPI",
    "contact": {
      "name": "InfoSec Threat Research Team",
      "email": "threat@godaddy.com",
      "x-slack-channel": "#threat-research",
      "x-source-code": "https://github.com/gdcorp-infosec/threat-api"
    }
  },
  "tags": [
    {
      "name": "Jobs",
      "description": "Job creation and status operations"
    },
    {
      "name": "Miscellaneous",
      "description": "Utility operations"
    }
  ],
  "basePath": "/v1",
  "schemes": [
    "https"
  ],
  "security": [
    {
      "sso-jwt-header": []
    }
  ],
  "paths": {
    "/jobs": {
      "post": {
        "tags": [
          "Jobs"
        ],
        "summary": "Create a new job",
        "description": "This API creates a new job for a given set of IOCs and returns a job ID.  Each request can only specific a single IOC type, but any amount of IOCs.  Note that anything you specify in metadata will be explicitly returned when requesting a user's jobs.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "List of IOCs to evaluate. IOCs will only be processed by the modules specified in the request. All of the IOCs provided must be of the same type.",
            "schema": {
              "$ref": "#/definitions/JobCreate"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation, returning a single jobId",
            "schema": {
              "type": "object",
              "properties": {
                "jobId": {
                  "type": "string"
                }
              },
              "example": {
                "jobId": "11111"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "List summary data for all jobs associated with the current user",
        "description": "This API returns a list of job IDs that are associated with the currently authenticated user.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/JobList"
            }
          }
        }
      }
    },
    "/jobs/{jobId}": {
      "delete": {
        "tags": [
          "Jobs"
        ],
        "summary": "Delete a job",
        "description": "Delete a job by it's ID.  You can only delete jobs that you own (jobs you created).",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "jobId",
            "description": "Job ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "Request information about a specific job",
        "description": "This API returns status and any available output for a specified job ID. The `responses` field of the returned JSON data includes responses from each service lambda that contributed output for specified IOCs.",
        "parameters": [
          {
            "name": "jobId",
            "description": "Job ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Job"
            }
          }
        }
      }
    },
    "/classifications": {
      "post": {
        "tags": [
          "Miscellaneous"
        ],
        "summary": "Identify IOC types for a provided list of IOCs",
        "description": "This API accepts a list of IOCs, and returns a dictionary indexed by supported IOC type, where each dictionary value contains IOCs of the corresponding IOC type.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "description": "List of IOCs.  Can be a list of any amount of any different type of IOCs.",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/ClassificationCreate"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Classification"
            }
          }
        }
      }
    },
    "/modules": {
      "get": {
        "tags": [
          "Miscellaneous"
        ],
        "summary": "List modules and their supported IOC types.",
        "description": "This API returns a dictionary of supported modules, each of which contains metadata about the module (supported IOC types, etc.).",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/ModuleList"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Classification": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "example": {
        "DOMAIN": [
          "example.com"
        ],
        "EMAIL": [
          "user123@example.com",
          "user456@godaddy.com"
        ],
        "GODADDY_USERNAME": [
          "user456"
        ],
        "IP": [
          "8.8.8.8"
        ],
        "URL": [
          "https://google.com"
        ]
      }
    },
    "ClassificationCreate": {
      "type": "object",
      "properties": {
        "iocs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "example": {
        "iocs": [
          "8.8.8.8",
          "example.com",
          "https://google.com",
          "user123@example.com",
          "user456@godaddy.com"
        ]
      }
    },
    "IOCType": {
      "description": "IOC Types that can be sent to create jobs, returned when getting modules returned when classifying IOCs.",
      "type": "string",
      "enum": [
        "UNKNOWN",
        "DOMAIN",
        "EMAIL",
        "CVE",
        "CWE",
        "CAPEC",
        "CPE",
        "URL",
        "MD5",
        "SHA1",
        "SHA256",
        "SHA512",
        "IP",
        "HOSTNAME",
        "AWSHOSTNAME",
        "GODADDY_USERNAME",
        "MITRE_TACTIC",
        "MITRE_TECHNIQUE",
        "MITRE_SUBTECHNIQUE",
        "MITRE_MITIGATION"
      ],
      "example": "DOMAIN"
    },
    "JobCreate": {
      "type": "object",
      "properties": {
        "iocType": {
          "$ref": "#/definitions/IOCType"
        },
        "iocs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object"
        }
      },
      "example": {
        "iocType": "DOMAIN",
        "iocs": [
          "godaddy.com"
        ],
        "modules": [
          "whois"
        ],
        "metadata": {
          "name": "My Test Run"
        }
      }
    },
    "JobDetail": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    "Job": {
      "type": "object",
      "properties": {
        "jobId": {
          "type": "string"
        },
        "submission": {
          "$ref": "#/definitions/JobCreate"
        },
        "responses": {
          "$ref": "#/definitions/JobDetail"
        },
        "startTime": {
          "type": "number"
        },
        "requestedModules": {
          "type": "array"
        },
        "jobStatus": {
          "type": "string",
          "enum": [
            "IN_PROGRESS",
            "INCOMPLETE",
            "COMPLETED"
          ]
        },
        "jobPercentage": {
          "type": "number"
        }
      },
      "example": {
        "jobId": "111111",
        "startTime": 1610000000,
        "requestedModules": ["whois"],
        "submission": {
          "iocType": "DOMAIN",
          "iocs": [
            "godaddy.com"
          ],
          "modules": [
            "whois"
          ]
        },
        "responses": {
          "geoip": [],
          "whois": [
            {
              "Data": "domain,createdDate,updatedDate,expirationDate,...",
              "DataType": "",
              "Metadata": [],
              "Title": "Whois lookup data"
            }
          ]
        },
        "jobStatus": "Completed",
        "jobPercentage": 100
      }
    },
    "JobsInfoPercentage": {
      "type": "object",
      "properties": {
        "job": {
          "type": "object",
          "items": {
            "$ref": "#/definitions/Job"
          }
        },
        "jobPercentage": {
          "type": "number"
        }
      }
    },
    "JobList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/JobsInfoPercentage"
      },
      "example": [
        {
          "jobId": "11111",
          "startTime": 1610000000,
          "jobPercentage": 2,
          "submission": {},
          "responses": {
            "geoip": null,
            "whois": null
          }
        },
        {
          "jobId": "22222",
          "startTime": 1620000000,
          "jobPercentage": 2,
          "submission": {},
          "responses": {
            "geoip": null,
            "whois": null
          }
        },
        {
          "jobId": "33333",
          "startTime": 1630000000,
          "jobPercentage": 2,
          "submission": {},
          "responses": {
            "geoip": null,
            "whois": null
          }
        }
      ]
    },
    "ModuleInfo": {
      "type": "object",
      "properties": {
        "supportedIOCTypes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/IOCType"
          }
        }
      }
    },
    "ModuleList": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ModuleInfo"
      },
      "example": {
        "geoip": {
          "supportedIOCTypes": [
            "IP"
          ]
        },
        "whois": {
          "supportedIOCTypes": [
            "DOMAIN"
          ]
        }
      }
    }
  },
  "securityDefinitions": {
    "sso-jwt-header": {
      "name": "Authorization",
      "in": "header",
      "type": "apiKey",
      "description": "Standard GoDaddy SSO header authorization: <code>sso-jwt (token)</code>"
    }
  }
}
